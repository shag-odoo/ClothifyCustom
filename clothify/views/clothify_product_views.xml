<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="clothify_product_model_action" model="ir.actions.act_window">
        <field name="name">Items</field>
        <field name="res_model">clothify.product</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- TREE VIEW -->
    <record id='clothify_view_list' model='ir.ui.view'>
        <field name='name'>clothify.view.list</field>
        <field name="model">clothify.product</field>
        <field name="arch" type="xml">
            <tree string="tree_view">
                <field name="name" />
                <field name="description" />
                <field name="size" />
                <field name="quantity" />
                <field name="price" />
            </tree>
        </field>
    </record>
     <!-- FORM VIEW -->
    <record id="clothify_form_view" model="ir.ui.view">
        <field name="name">clothify.form.view</field>
        <field name="model">clothify.product</field>
        <field name="arch" type="xml">
            <form string="form_view">
                <header>
                    <!-- SHOWING STATE IN NAVIGATION BAR -->
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <h1>
                        <field name="name" />
                    </h1>
                    <group>
                        <group>
                            <group>
                               
                                <field name="size" />
                                <field name="price" />
                            </group>
                            <group>
                                <field name="quantity" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="description" />
                                    <field name="color" />
                                    <field name="quantity" />
                                    <field name="state" string="Status" />
                                </group>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- SEARCH VIEW -->
    <record id="clothify_view_search" model="ir.ui.view">
        <field name="name">clothify.view.search</field>
        <field name="model">clothify.product</field>
        <field name="arch" type="xml">
            <search string="clothify_search">
                <field name="name" string="Title" />
                <field name="quantity" />
                <field name="price" />
                <field name="color" />
                <field name="size" />
                <separator />
                <filter string="Available" name="state"
                    domain="['|',('state','=','new'),('state','=','cart')]" />
                <group string="Group By">
                    <filter string="quantity" name="quantity" context="{'group_by':'quantity'}" />
                </group>
            </search>
        </field>
    </record>
</odoo>